{
  "name": "svg-viewer",
  "displayName": "SVG Viewer",
  "description": "View SVG, images in a waterfall gallery",
  "version": "1.0.0",
  "icon": "logo.png",
  "publisher": "dev",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "icon",
    "svg",
    "viewer",
    "image",
    "gallery"
  ],
  "galleryBanner": {
    "color": "#37699A",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "svgViewerExplorer",
          "title": "SVG Viewer",
          "icon": "logo.svg"
        }
      ],
      "panel": [
        {
          "id": "svgViewerPanel",
          "title": "SVG Viewer",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "svgViewerExplorer": [
        {
          "id": "svgViewer.imageTree",
          "name": "Images",
          "contextualTitle": "SVG Viewer"
        }
      ],
      "svgViewerPanel": [
        {
          "type": "webview",
          "id": "svgViewer.panelView",
          "name": "SVG Viewer",
          "contextualTitle": "SVG Viewer"
        }
      ]
    },
    "commands": [
      {
        "command": "SVGViewer.open",
        "title": "%command.open.title%",
        "category": "%command.open.category%",
        "icon": "src/images/window.svg"
      },
      {
        "command": "SVGViewer.openInPanel",
        "title": "%command.openInPanel.title%",
        "category": "%command.open.category%",
        "icon": "src/images/panel.svg"
      },
      {
        "command": "SVGViewer.refresh",
        "title": "%command.refresh.title%",
        "category": "%command.open.category%",
        "icon": "src/images/refresh.svg"
      },
      {
        "command": "SVGViewer.openFromTree",
        "title": "%command.open.title%",
        "category": "%command.open.category%",
        "icon": "src/images/window.svg"
      },
      {
        "command": "SVGViewer.openInPanelFromTree",
        "title": "%command.openInPanel.title%",
        "category": "%command.open.category%",
        "icon": "src/images/panel.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "SVGViewer.refresh",
          "when": "view == svgViewer.imageTree",
          "group": "navigation@1"
        },
        {
          "command": "SVGViewer.openInPanel",
          "when": "view == svgViewer.imageTree",
          "group": "navigation@2"
        },
        {
          "command": "SVGViewer.open",
          "when": "view == svgViewer.imageTree",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "SVGViewer.openInPanelFromTree",
          "when": "view == svgViewer.imageTree && viewItem == imageFile",
          "group": "inline@1"
        },
        {
          "command": "SVGViewer.openFromTree",
          "when": "view == svgViewer.imageTree && viewItem == imageFile",
          "group": "inline@2"
        },
        {
          "command": "SVGViewer.openInPanelFromTree",
          "when": "view == svgViewer.imageTree && viewItem == folder",
          "group": "inline@1"
        },
        {
          "command": "SVGViewer.openFromTree",
          "when": "view == svgViewer.imageTree && viewItem == folder",
          "group": "inline@2"
        }
      ],
      "commandPalette": [
        {
          "command": "SVGViewer.open",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.+\\.(svg|png|jpg|jpeg|gif|webp|ico|bmp|json)$/i"
        },
        {
          "command": "SVGViewer.openInPanel",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.+\\.(svg|png|jpg|jpeg|gif|webp|ico|bmp|json)$/i"
        }
      ],
      "editor/context": [
        {
          "command": "SVGViewer.open",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.+\\.(svg|png|jpg|jpeg|gif|webp|ico|bmp|json)$/i",
          "group": "SVGViewer@1"
        },
        {
          "command": "SVGViewer.openInPanel",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.+\\.(svg|png|jpg|jpeg|gif|webp|ico|bmp|json)$/i",
          "group": "SVGViewer@2"
        }
      ]
    }
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:webview": "vite build --config vite.webview.config.ts",
    "build:all": "pnpm run build && pnpm run build:webview",
    "package": "pnpm run build:all && vsce package --no-dependencies --allow-star-activation",
    "vscode:prepublish": "pnpm run build:all"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@types/vscode": "^1.82.0",
    "@vitejs/plugin-react": "^4.3.4",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "@vscode/vsce": "^3.2.1"
  },
  "dependencies": {
    "@heroui/react": "3.0.0-beta.5",
    "@heroui/styles": "3.0.0-beta.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "author": "woyaodangrapper",
  "license": "MIT",
  "homepage": "https://github.com/woyaodangrapper/svg-viewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/woyaodangrapper/svg-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/woyaodangrapper/svg-viewer/issues"
  }
}